{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Output the compiled files in the 'dist' folder
    "rootDir": "./src", // Your TypeScript source files will be in the 'src' folder
    "strict": true,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts" // Include TypeScript files in the 'src' folder
  ]
}
